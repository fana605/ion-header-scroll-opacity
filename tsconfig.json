{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "outDir": "./dist",
        "rootDir": "src"
    },
    "include": [
        "src/**/*.ts"
    ],
    "files": ["src/index.ts"],
    "exclude": [
        "node_modules"
    ]
}